# Docker Environment Variables Example
# Copy this to .env before running docker-compose

# Application Settings
APP_NAME=WhatsApp Bot
DEBUG=False

# Database (Auto-configured in docker-compose.yml)
# DATABASE_URL will be set automatically by docker-compose
# If you want to override:
# DATABASE_URL=postgresql://whatsapp_bot:whatsapp_bot_password@postgres:5432/whatsapp_bot

# PostgreSQL Configuration
POSTGRES_USER=whatsapp_bot
POSTGRES_PASSWORD=whatsapp_bot_password
POSTGRES_DB=whatsapp_bot

# Redis (Auto-configured in docker-compose.yml)
# REDIS_URL will be set automatically by docker-compose
# If you want to override:
# REDIS_URL=redis://redis:6379/0

# WhatsApp Business API Configuration
WHATSAPP_VERIFY_TOKEN=your_unique_verify_token_here
WHATSAPP_TOKEN=your_whatsapp_business_api_access_token
WHATSAPP_PHONE_ID=your_whatsapp_phone_number_id
WHATSAPP_APP_SECRET=your_app_secret_from_meta_dashboard

# Admin Panel Authentication
ADMIN_API_KEY=your_secure_admin_api_key_here

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini API Key (for image generation)
# Get your key from: https://aistudio.google.com/app/apikey
GOOGLE_CLOUD_API_KEY=your_gemini_api_key_here

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# Ngrok Configuration (for tunneling)
TUNNEL_METHOD=ngrok
NGROK_DOMAIN=your-domain.ngrok-free.app
NGROK_AUTHTOKEN=your_ngrok_authtoken_here

